        </com.xxf.view.view.MaxHeightView>

        <Button
            android:id="@+id/bt_setResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="setResult" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
