<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_pressed="true">
           
            <shape>
                <solid android:color="@color/orange" />

                <corners
                    android:bottomLeftRadius="7.0dip"
                    android:bottomRightRadius="7.0dip"
                    android:radius="2.0dip"
                    android:topLeftRadius="7.0dip"
                    android:topRightRadius="7.0dip" />

                <stroke
                    android:width="1dp"
                    android:color="#eededede" />               
            </shape>
           
        </item>
        <item>
            <shape>
                <solid android:color="@color/white" />

                <corners
                    android:bottomLeftRadius="7.0dip"
                    android:bottomRightRadius="7.0dip"
                    android:radius="2.0dip"
                    android:topLeftRadius="7.0dip"
                    android:topRightRadius="7.0dip" />

                <stroke
                    android:width="1dp"
                    android:color="#eededede" />
            </shape>
        </item>
    </selector>

</inset>